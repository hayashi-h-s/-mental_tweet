  
<div class="container">
  <div class="card" style="width: 50rem;">
    <div class="card-body">
      <h5 class="card-title"><%= image_tag @post.image,width: 550 if @post.image.attached?%></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= link_to @post.user.name %></h6>
      <p class="card-text"><%= @post.content %></p>
      <%= link_to "削除",@post,method: :delete%>
      <%= link_to "編集",edit_post_path%>
    </div>
  </div>
</div>