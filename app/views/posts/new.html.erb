<h1>新規登録</h1>

  <% @post.errors.full_messages.each do |message| %>
    <div class="alert alert-success">
      <%= message %>
    </div>
  <% end %>

<%= form_with model:@post,local:true do |f| %>
  <div class="form-group">
    <%= f.label :投稿内容 %>
    <%= f.text_area :content,class: 'form-control'%>
    <%= f.label :画像 %>
    <%= f.file_field :image %>        
    <%= f.label :動画 %>
    <%= f.file_field :video %>
  </div>
  <%= f.submit "投稿",class:"btn btn-primary"%>
<% end %>
