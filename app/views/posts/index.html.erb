<h1>ツイート一覧</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ユーザーアイコン</th>
      <th>ユーザー名</th>
      <th>投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag post.user.image,width: 50 if post.user.image.attached? %></td>
        <td><%= link_to post.user.name,admin_user_path(post.user) %></td>
        <td><%= link_to post.content, post %></td>
        <td><%= link_to "編集",edit_post_path(post)%></td>
        <td><%= link_to "削除",post,method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>
