<h1>ツイート一覧</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.user.name,  "admin/users/#{post.user.id}" %></td>
        <td><%= link_to post.content, post %></td>
      </tr>
    <% end %>
  </tbody>
</table>