<h1><%= @user.name %>の詳細</h1>
<%= link_to "編集",edit_admin_user_path,class:"btn btn-primary"%>
<table class="table table-hover">
  <tbody>
    <tr>
      <th>アイコン画像</th>
      <td><%= image_tag @user.image,width: 50 if @user.image.attached?%></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>

<h2><%= @user.name %>の投稿一覧</h2>
<div class="mb-3">
  <table class="table table-hover">
    <tbody>
      <% @user.posts.each do |post| %>
        <tr>
          <td><%= link_to post.content, post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>





