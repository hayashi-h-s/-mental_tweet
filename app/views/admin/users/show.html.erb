<h1>ユーザー詳細</h1>
<div class="form-group">
  <table class="table table-hover">
    <tr>
      <th>ユーザー名</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>ユーザー作成日時</th>
      <td><%= @user.created_at %></td>
    </tr>
  </table>
</div>

<%= link_to "編集",edit_admin_user_path,class:"btn btn-primary"%>
<%= link_to "削除",[:admin,@user],method: :delete,class:"btn btn-danger"%>
